model Profile {
  // id
  id    String @id @default(uuid())
  clerk String @unique

  // metadata
  username String  @unique
  aboutme  String?
  views    Int

  // identifiers
  linkvertise_api String?
  workink_api     String?

  projects Project[]
  logs     Log[]
}

model Project {
  // id
  id String @id @default(uuid())

  // metadata
  title       String
  description String?
  active      Boolean
  verified    Boolean
  createdAt   DateTime @default(now()) @db.Date
  views       Int

  image_url   String?
  youtube_url String?

  // identifiers
  Profile   Profile? @relation(fields: [profileId], references: [id])
  profileId String?
}

model Log {
  id   Int      @id @default(autoincrement())
  date DateTime @default(now()) @db.Date

  views       Int
  generations Int
  skips       Int

  Profile   Profile? @relation(fields: [profileId], references: [id])
  profileId String?
}
